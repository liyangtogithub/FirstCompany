<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#faffffff">
            <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/sport_summary_titlebar_pad_horizon"
                    android:padding="8dp"
                    android:background="@drawable/selector_icon"
                    android:src="@drawable/btn_back_1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_centerInParent="true"
                      android:textSize="16dp"
                      android:textColor="#424242"
                      android:text="@string/Menu_Activity"/>
        </RelativeLayout>
        <WebView android:layout_width="match_parent" android:layout_height="match_parent"
                 android:id="@+id/webView"/>
    </LinearLayout>
</RelativeLayout>