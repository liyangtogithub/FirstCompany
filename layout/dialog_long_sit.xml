<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/lineat_long_sit"
        android:layout_width="@dimen/alert_300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_margin="@dimen/alert_10dp"
        android:orientation="horizontal" >

       <com.desay.wheel.widget.WheelView
            android:id="@+id/time"
            android:layout_marginLeft="@dimen/alert_10dp"
            android:layout_width="@dimen/alert_130dp"
            android:layout_height="@dimen/alert_105dp" />
       <com.desay.wheel.widget.WheelView
            android:id="@+id/sit_mins"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/alert_10dp"
            android:layout_width="@dimen/alert_130dp"
            android:layout_height="@dimen/alert_105dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    
       <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/alert_1dp"
        android:background="@color/color_line" 
        android:layout_below="@id/lineat_long_sit"
        />

    <LinearLayout
        android:layout_width="@dimen/alert_280dp"
        android:layout_height="@dimen/alert_50dp"
        android:layout_marginTop="@dimen/alert_1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lineat_long_sit"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_sure"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/alert_48dp"
            android:layout_weight="1"
            android:text="@string/sure_str"
            android:textColor="@color/color_font_normal"
            android:textSize="@dimen/alert_40px"
            android:background="@drawable/selector_button"
            />

        <Button
            android:id="@+id/dialog_cancle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/alert_48dp"
            android:layout_weight="1"
            android:text="@string/music_cancle"
            android:textColor="@color/color_font_normal"
            android:textSize="@dimen/alert_40px" 
            android:background="@drawable/selector_button"
            />
    </LinearLayout>

</RelativeLayout>