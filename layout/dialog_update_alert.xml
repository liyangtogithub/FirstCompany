<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/edge_20"
    android:layout_marginRight="@dimen/edge_20"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_title"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="@string/Title_AppUpgrade"
        android:textColor="@color/color_font_normal"
        android:textSize="@dimen/font_pixel_30" />

    <TextView
        android:id="@+id/alerttoast1"
        style="@style/match_parent"
        android:layout_marginLeft="@dimen/edge_40"
        android:layout_marginRight="@dimen/edge_40"
        android:layout_marginTop="@dimen/edge_20"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/upgrade_app_info"
        android:textColor="@color/color_font_normal"
        android:textSize="@dimen/font_pixel_26" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:padding="7dp" >

        <Button
            android:id="@+id/btn_update"
            style="@style/button_dfu_load"
            android:layout_width="140dp"
            android:text="@string/dfu_alert_update" />

        <Button
            android:id="@+id/btn_wait"
            style="@style/button_dfu_load"
            android:layout_width="140dp"
            android:text="@string/dfu_alert_later" />
    </LinearLayout>

</LinearLayout>