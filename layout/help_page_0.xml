<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/match_parent"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:paddingTop="15dp"
                android:paddingBottom="33dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <TextView
                style="@style/wrap_content"
                android:textSize="20dp"
                android:textColor="#2692d8"
                android:text="@string/help_1_1"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#b5b5b5"
              android:layout_marginTop="3dp"
              android:layout_marginBottom="17dp"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:gravity="left"
                      android:orientation="vertical">
            <TextView
                    style="@style/wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:text="@string/help_1_2"/>
            <TextView
                    style="@style/wrap_content"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000"
                    android:text="@string/help_1_3"/>
        </LinearLayout>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="20dp"
                   android:src="@drawable/help_img_1"/>
        <TextView
                style="@style/wrap_content"
                android:textSize="20dp"
                android:textColor="#2692d8"
                android:layout_marginTop="40dp"
                android:text="@string/help_1_4"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:layout_gravity="center_horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#757575"
                    android:singleLine="true"
                    android:drawableTop="@drawable/main_connected"
                    android:drawablePadding="6dp"
                    android:text="@string/help_1_5"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginLeft="63dp"
                    android:textColor="#757575"
                    android:singleLine="true"
                    android:drawableTop="@drawable/main_conn_cut"
                    android:drawablePadding="6dp"
                    android:text="@string/help_1_6"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>