<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/match_parent"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:paddingTop="15dp"
                android:paddingBottom="33dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <TextView
                style="@style/wrap_content"
                android:textSize="20dp"
                android:textColor="#2692d8"
                android:text="@string/help_2_1"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#b5b5b5"
              android:layout_marginTop="3dp"
              android:layout_marginBottom="17dp"/>
        <TextView
                style="@style/wrap_content"
                android:textSize="20dp"
                android:textColor="#2692d8"
                android:drawableLeft="@drawable/point_blue"
                android:text="@string/help_2_2"/>
        <TextView
                style="@style/wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                android:text="@string/help_2_3"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginTop="25dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/help_img_2"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="25dp"
                      android:layout_centerHorizontal="true"
                      android:textColor="#fefefe"
                      android:textSize="12dp"
                      android:text="@string/band_sync_data"/>
        </RelativeLayout>
        <TextView
                style="@style/wrap_content"
                android:textSize="20dp"
                android:textColor="#2692d8"
                android:layout_marginTop="25dp"
                android:drawableLeft="@drawable/point_blue"
                android:text="@string/help_2_4"/>
        <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>