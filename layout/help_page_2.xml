<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/match_parent"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:paddingTop="15dp"
                android:paddingBottom="33dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <TextView
                style="@style/wrap_content"
                android:textSize="20dp"
                android:textColor="#2692d8"
                android:text="@string/help_3_1"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#b5b5b5"
              android:layout_marginTop="3dp"
              android:layout_marginBottom="17dp"/>

        <TextView
                style="@style/wrap_content"
                android:textSize="16dp"
                android:textColor="#000"
                android:text="@string/help_3_2"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="15dp"
                   android:src="@drawable/help_img_3"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="center_horizontal">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/help_img_5"/>
            <TextView
                    android:id="@+id/text1"
                    style="@style/wrap_content"
                    android:textSize="13dp"
                    android:textColor="#000"
                    android:layout_marginTop="27dp"
                    android:text="@string/help_3_3"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:layout_marginTop="15dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/help_img_4"/>
            <TextView
                    android:id="@+id/text2"
                    style="@style/wrap_content"
                    android:textSize="13dp"
                    android:textColor="#000"
                    android:layout_marginTop="27dp"
                    android:text="@string/help_3_4"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>