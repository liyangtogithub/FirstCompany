<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/match_parent"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:paddingTop="15dp"
                android:paddingBottom="33dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <TextView
                style="@style/wrap_content"
                android:textSize="20dp"
                android:textColor="#2692d8"
                android:text="@string/help_4_1"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#b5b5b5"
              android:layout_marginTop="3dp"
              android:layout_marginBottom="17dp"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:gravity="left"
                      android:orientation="vertical">
            <TextView
                    android:id="@+id/text1"
                    style="@style/wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:text="@string/help_4_2"/>
            <TextView
                    style="@style/wrap_content"
                    android:textSize="16dp"
                    android:layout_marginTop="25dp"
                    android:textColor="#000"
                    android:text="@string/help_4_3"/>
            <TextView
                    style="@style/wrap_content"
                    android:textSize="20dp"
                    android:textColor="#2692d8"
                    android:layout_marginTop="5dp"
                    android:text="@string/help_4_4"/>
        </LinearLayout>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="10dp"
                   android:src="@drawable/help_img_0"/>

    </LinearLayout>
</RelativeLayout>