<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_40dp"
        layout="@layout/title_back" />

    <LinearLayout
        style="@style/match_parent"
        android:layout_marginLeft="@dimen/login_30dp"
        android:background="@color/white"
        android:layout_below="@id/title"
        android:orientation="vertical" >

        <include layout="@layout/line_edge" />

        <ListView
            android:id="@+id/country_listview"
            style="@style/match_parent"
            android:divider="@color/color_line"
            android:cacheColorHint="#00000000" 
            android:dividerHeight="@dimen/login_1dp"
            android:listSelector="@color/transparent" />
        <ListView
            android:id="@+id/province_listview"
            style="@style/match_parent"
            android:divider="@color/color_line"
            android:dividerHeight="@dimen/login_1dp"
            android:cacheColorHint="#00000000"
            android:listSelector="@color/transparent" 
            android:visibility="gone"
            />
        <ListView
            android:id="@+id/city_listview"
            style="@style/match_parent"
            android:divider="@color/color_line"
            android:cacheColorHint="#00000000" 
            android:dividerHeight="@dimen/login_1dp"
            android:listSelector="@color/transparent" 
            android:visibility="gone"
            />
    </LinearLayout>

</RelativeLayout>