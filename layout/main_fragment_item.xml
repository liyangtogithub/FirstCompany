<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res/com.desay.fitband"
              style="@style/match_parent"
              android:orientation="vertical">

    <ScrollView
            style="@style/match_parent"
            android:background="@color/color_main_bg"
            android:fillViewport="true"
            android:orientation="vertical"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/layout_money"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_220dp"
                    android:background="@color/white">

                <ImageView
                        style="@style/wrap_content"
                        android:src="@drawable/main_gold_bg2"/>

                <ImageView
                        android:id="@+id/main_gold_back"
                        style="@style/wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/main_gold_bg"/>

                <ImageButton
                        android:id="@+id/go_back"
                        style="@style/wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/main_10dp"
                        android:layout_toLeftOf="@id/main_gold_back"
                        android:background="@drawable/main_bt_back"
                        android:clickable="true"
                        android:src="@drawable/main_left"/>

                <ImageButton
                        android:id="@+id/go_ahead"
                        style="@style/wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/main_10dp"
                        android:layout_toRightOf="@id/main_gold_back"
                        android:background="@drawable/main_bt_back"
                        android:clickable="true"
                        android:src="@drawable/main_right"/>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/main_200dp"
                        android:layout_centerInParent="true">

                    <dolphin.tools.common.widget.DoughnutProgressBar
                            android:id="@+id/doughnutProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:haloRadius="@dimen/main_0dp"
                            app:trackWidth="@dimen/main_23dp"/>
                </FrameLayout>

                <LinearLayout
                        style="@style/wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:orientation="vertical">

                    <TextView
                            style="@style/wrap_content"
                            android:layout_marginBottom="@dimen/main_f8dp"
                            android:text="@string/HomeCoinGetLabel"
                            android:textColor="@color/color_font_main"
                            android:textSize="@dimen/main_33px"/>

                    <TextView
                            android:id="@+id/gold_num"
                            style="@style/wrap_content"
                            android:text="20"
                            android:textColor="@color/color_font_orange"
                            android:textSize="@dimen/main_110px"/>

                    <TextView
                            style="@style/wrap_content"
                            android:layout_marginTop="@dimen/main_f8dp"
                            android:text="@string/HomeCoinLabel"
                            android:textColor="@color/color_font_main"
                            android:textSize="@dimen/main_33px"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layout_sport"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_155dp"
                    android:layout_margin="@dimen/main_10dp"
                    android:background="@drawable/main_back"
                    android:clickable="true">

                <FrameLayout android:layout_width="302dp" android:layout_height="123dp"
                        android:layout_centerInParent="true">
                    <com.desay.iwan2.module.summary.widget.TrackProgressBar
                            android:id="@+id/trackProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </FrameLayout>
            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/layout_sleep"
                    style="@style/match_parent_w"
                    android:layout_marginBottom="@dimen/main_10dp"
                    android:layout_marginLeft="@dimen/main_10dp"
                    android:layout_marginRight="@dimen/main_10dp"
                    android:background="@drawable/main_back"
                    android:clickable="true"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/main_10dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/main_10dp"
                            >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/main_10dp"
                                android:layout_centerHorizontal="true"
                                android:background="@color/transparent"
                                android:text="@string/main_sleep_title"
                                android:textColor="#a680fc"
                                android:textSize="@dimen/main_30px"/>

                        <TextView
                                android:id="@+id/sleep_duraction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/main_30dp"
                                android:background="@color/transparent"
                                android:text="@string/main_sleep"
                                android:textColor="@color/color_font_normal"
                                android:textSize="@dimen/main_40px"/>

                        <FrameLayout
                                android:layout_width="@dimen/main_65dp"
                                android:layout_height="@dimen/main_65dp"
                                >

                            <com.desay.iwan2.module.summary.widget.DoughnutProgressBar1
                                    android:id="@+id/sleep_duraction_progress"
                                    android:layout_width="@dimen/main_65dp"
                                    android:layout_height="@dimen/main_65dp"
                                    />
                        </FrameLayout>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/main_10dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/main_10dp"
                            >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/main_10dp"
                                android:layout_centerHorizontal="true"
                                android:background="@color/transparent"
                                android:text="@string/main_deep_title"
                                android:textColor="#31a9ff"
                                android:textSize="@dimen/main_30px"/>

                        <TextView
                                android:id="@+id/sleep_deep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/main_30dp"
                                android:layout_centerHorizontal="true"
                                android:background="@color/transparent"
                                android:text="@string/main_deep"
                                android:textColor="@color/color_font_normal"
                                android:textSize="@dimen/main_40px"/>

                        <FrameLayout
                                android:layout_width="@dimen/main_65dp"
                                android:layout_height="@dimen/main_65dp"
                                >
                            <com.desay.iwan2.module.summary.widget.DoughnutProgressBar1
                                    android:id="@+id/sleep_deep_progress"
                                    android:layout_width="@dimen/main_65dp"
                                    android:layout_height="@dimen/main_65dp"
                                    app:DoughnutProgressBarBgColor="#d6e2eb"
                                    app:DoughnutProgressBarFillColor="#37abfe"
                                    />
                        </FrameLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/main_3dp"
                        android:layout_marginBottom="@dimen/main_10dp">

                    <com.desay.iwan2.module.summary.widget.PlotGradientColorBarRuler
                            android:id="@+id/ruler"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/main_65dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>