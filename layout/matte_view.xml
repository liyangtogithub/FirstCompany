<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/match_parent"
                android:id="@+id/layout_matte"
                android:background="#55000000">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:background="@drawable/rectangle_corner_black_1"
                  android:layout_centerInParent="true"
                  android:orientation="vertical"
                  android:padding="30dp"
                  android:id="@+id/layout_circle">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/imageView_refresh"
                   android:layout_centerInParent="true"
                   android:src="@drawable/ic_refresh"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:id="@+id/textView_circleProgressBarTitle"
                  android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@drawable/rectangle_corner_black_1"
                  android:layout_centerInParent="true"
                  android:layout_margin="20dp"
                  android:padding="20dp"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:id="@+id/layout_numProgressBar">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/textView_progressBarTitle"
                  android:textColor="#fff"/>
        <dolphin.tools.common.widget.NumberProgressBar
                android:id="@+id/numberbar"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@style/NumberProgressBar_Relax_Blue"/>
    </LinearLayout>
</RelativeLayout>