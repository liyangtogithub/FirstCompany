<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/menu_back_select"
                android:padding="@dimen/menu_item_pad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:gravity="center_vertical">
        <ImageView
                android:id="@+id/icon"
                style="@style/wrap_content"
                android:layout_marginRight="@dimen/menu_item_icon_margin_horizon"/>

        <TextView
                android:id="@+id/text1"
                style="@style/wrap_content"
                android:textColor="@color/color_font_normal"
                android:textSize="@dimen/menu_item_text_size"/>
    </LinearLayout>

    <TextView
            android:id="@+id/textView_hasNew"
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rectangle_corner_fill_blue"
            android:padding="5dp"
            android:text="New"
            android:textColor="#fff"
            android:textSize="@dimen/menu_item_text_size"/>

</RelativeLayout>