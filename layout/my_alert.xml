<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgrount"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_backgrount"
        android:orientation="vertical" >

        <include
            style="@style/title"
            layout="@layout/title_back" />

        <include layout="@layout/line_edge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/alert_10dp"
            android:layout_marginLeft="@dimen/alert_10dp"
            android:layout_marginTop="@dimen/alert_25dp"
            android:text="@string/alarm"
            android:textColor="#848484"
            android:textSize="@dimen/alert_30px" />

        <include layout="@layout/line_edge" />

        <RelativeLayout
            android:id="@+id/linear_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backrepeat"
            android:padding="@dimen/alert_15dp" >

            <TextView
                android:id="@+id/tv_alert_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00~17:00"
                android:textColor="#575757"
                android:textSize="@dimen/alert_40px" />

            <TextView
                android:id="@+id/tv_alert_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_alert_alarm"
                android:text="Mon Tue Wen"
                android:textColor="#848484"
                android:textSize="@dimen/alert_30px" />

            <TextView
                android:id="@+id/tv_alarm_sync"
                android:layout_width="@dimen/alert_110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/alert_20dp"
                android:text="@string/alert_wait_sync"
                android:textColor="@color/orange"
                android:textSize="@dimen/alert_30px" 
                android:gravity="right"
                />

            <ImageView
                style="@style/wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/alert_arrows" />
        </RelativeLayout>

        <include layout="@layout/line_edge" />

        <RelativeLayout
            android:id="@+id/linear_1_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backrepeat"
            android:padding="@dimen/alert_15dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_alert_alarm_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00~17:00"
                android:textColor="#575757"
                android:textSize="@dimen/alert_40px" />

            <TextView
                android:id="@+id/tv_alert_week_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_alert_alarm_2"
                android:text="Mon Tue Wen"
                android:textColor="#848484"
                android:textSize="@dimen/alert_30px" />

            <TextView
                android:id="@+id/tv_alarm_sync_2"
                android:layout_width="@dimen/alert_110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/alert_20dp"
                android:text="@string/alert_wait_sync"
                android:textColor="@color/orange"
                android:textSize="@dimen/alert_30px" 
                android:gravity="right"
                />

            <ImageView
                style="@style/wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/alert_arrows" />
        </RelativeLayout>

        <include layout="@layout/line_edge" />

        <RelativeLayout
            android:id="@+id/linear_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alert_20dp"
            android:background="@drawable/backrepeat"
            android:padding="@dimen/alert_15dp" >

            <TextView
                android:id="@+id/tv_sit_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="@string/RemaindIdleSetting"
                android:textColor="#575757"
                android:textSize="@dimen/alert_40px" />

            <TextView
                android:id="@+id/tv_sit_sync"
                android:layout_width="@dimen/alert_110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/alert_20dp"
                android:text="@string/alert_wait_sync"
                android:textColor="@color/orange"
                android:textSize="@dimen/alert_30px" 
                android:gravity="right"
                />

            <TextView
                android:id="@+id/tv_alert_sit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sit_alarm"
                android:text="08:00~17:00"
                android:textColor="#848484"
                android:textSize="@dimen/alert_30px" />

            <ImageView
                style="@style/wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/alert_arrows" />
        </RelativeLayout>

        <include layout="@layout/line_edge" />

        <RelativeLayout
            android:id="@+id/linear_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alert_20dp"
            android:background="@drawable/backrepeat"
            android:padding="@dimen/alert_15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/RemaindIncomingCallAlert"
                android:textColor="#575757"
                android:textSize="@dimen/alert_40px" />

            <CheckBox
                android:id="@+id/alert_checkbox"
                style="@style/clock_checkbox_2"
                />
        </RelativeLayout>

        <include layout="@layout/line_edge" />

        <TextView
            android:id="@+id/tv_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alert_5dp"
            android:layout_marginLeft="@dimen/alert_15dp"
            android:layout_marginRight="@dimen/alert_15dp"
            android:text="@string/RemaindIncoingCallTips"
            android:textColor="#848484"
            android:textSize="@dimen/alert_30px" />
    </LinearLayout>

</ScrollView>