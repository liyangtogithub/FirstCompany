<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.desay.fitband"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:background="@drawable/rectangle_half_corner_1_white"
              android:orientation="vertical"
              android:paddingTop="@dimen/sport_statistics_week_pad_top"
              android:paddingLeft="@dimen/sport_statistics_week_pad_horizon"
              android:paddingRight="@dimen/sport_statistics_week_pad_horizon"
              android:paddingBottom="@dimen/sport_statistics_week_pad_bottom"
              android:layout_marginLeft="@dimen/sport_statistics_margin"
              android:layout_marginRight="@dimen/sport_statistics_margin"
              android:layout_marginBottom="@dimen/sport_statistics_margin">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/sport_statistics_label_margin_horizon"
                  android:layout_marginBottom="@dimen/sport_statistics_label_margin_bottom">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="@dimen/sport_statistics_text1_size"
                  android:textColor="#676767"
                  android:text="@string/SportWeekType"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="@dimen/sport_statistics_text2_size"
                  android:id="@+id/textView_weekSportType"
                  android:textColor="#333"/>
    </LinearLayout>
    <com.desay.iwan2.module.sport.widget.SportChartView2
            chart="@xml/sport_chart_3"
            app:xLabelSize="@dimen/sport_statistics_chart_xlabel_size"
            app:yLabelSize="@dimen/sport_statistics_chart_ylabel_size"
            app:chartmode="1"
            android:id="@+id/chartView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>